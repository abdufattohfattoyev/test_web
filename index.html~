    <div class="tabs">
        <button class="tab active" onclick="showTab('dashboard')">üìä Dashboard</button>
        <button class="tab" onclick="showTab('users')">üë• Foydalanuvchilar</button>
        <button class="tab" onclick="showTab('tests')">üìù Testlar</button>
        <button class="tab" onclick="showTab('students')">üéì O'quvchilar</button>
        <button class="tab" onclick="showTab('results')">üìà Natijalar</button>
    </div>

    <div class="content">
        <div id="dashboard" class="tab-content">
            <h2>üìä Umumiy Statistika</h2>
            <div class="stats-grid" id="statsGrid">
                <div class="loading">üìä Statistika yuklanmoqda...</div>
            </div>
        </div>

        <div id="users" class="tab-content" style="display:none;">
            <h2>üë• Ro'yxatdan O'tgan Foydalanuvchilar</h2>
            <div id="usersList" class="loading">üë• Foydalanuvchilar yuklanmoqda...</div>
        </div>

        <div id="tests" class="tab-content" style="display:none;">
            <h2>üìù Yaratilgan Testlar</h2>
            <div id="testsList" class="loading">üìù Testlar yuklanmoqda...</div>
        </div>

        <div id="students" class="tab-content" style="display:none;">
            <h2>üéì Test Topshirgan O'quvchilar</h2>
            <div id="studentsList" class="loading">üéì O'quvchilar yuklanmoqda...</div>
        </div>

        <div id="results" class="tab-content" style="display:none;">
            <h2>üìà Test Natijalari</h2>
            <div id="resultsList" class="loading">üìà Natijalar yuklanmoqda...</div>
