    <!-- Supabase CDN -->
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    <script>
        // Supabase konfiguratsiyasi
        const SUPABASE_URL = 'https://jwkgrkvornagxauwrduq.supabase.co';
        const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Imp3a2dya3Zvcm5hZ3hhdXdyZHVxIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTQwOTM4NDcsImV4cCI6MjA2OTY2OTg0N30.LOF8n-jJKzm9DcTTWu4QYrqWf7x7zLd3m29BlP8-n1I';

        const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

        let currentUser = null;
        let isAdmin = false;

        // URL parametrlaridan user_id olish
        function getUserIdFromUrl() {
            const params = new URLSearchParams(window.location.search);
            return params.get('user_id') || null;
        }

        // Foydalanuvchi rolini aniqlash
        async function checkUserRole() {
            const userId = getUserIdFromUrl();

            if (!userId) {
                showStudentInterface();
                return;
            }

            try {
                const { data: user, error } = await supabase
                    .from('users')
                    .select('*')
                    .eq('telegram_id', userId)
                    .single();

                if (error || !user) {
                    showStudentInterface();
                    return;
                }

                currentUser = user;
                isAdmin = user.is_admin;

                if (isAdmin) {
                    showAdminInterface();
                } else {
                    showStudentInterface();
                }

            } catch (error) {
                console.error('Foydalanuvchi rolini aniqlashda xatolik:', error);
                showStudentInterface();
            }
        }

        // Admin interfeysi ko'rsatish
        function showAdminInterface() {
            document.getElementById('adminTabs').classList.remove('hidden');
            document.getElementById('adminContent').classList.remove('hidden');
            document.getElementById('studentLogin').classList.add('hidden');

            document.getElementById('pageTitle').textContent = 'üìä Test Tizimi - Admin Panel';
            document.getElementById('userInfo').textContent = `Admin: ${currentUser.full_name || currentUser.first_name}`;
            document.getElementById('pageDescription').textContent = 'Barcha testlar va natijalar statistikasi';

            loadAllData();
        }

        // Student interfeysi ko'rsatish
        function showStudentInterface() {
            document.getElementById('adminTabs').classList.add('hidden');
            document.getElementById('adminContent').classList.add('hidden');
            document.getElementById('studentLogin').classList.remove('hidden');

            document.getElementById('pageTitle').textContent = 'üéì Test Tizimi';
            document.getElementById('userInfo').textContent = currentUser ?
                `Foydalanuvchi: ${currentUser.full_name || currentUser.first_name}` :
                'Mehmon';
            document.getElementById('pageDescription').textContent = 'Test topshirish uchun ma\'lumotlaringizni kiriting';
        }

        // Test boshlash
        async function startTest() {
            const testCode = document.getElementById('testCodeInput').value.trim().toUpperCase();
            const studentName = document.getElementById('studentName').value.trim();

            if (!testCode) {
                showMessage('‚ùå Test kodini kiriting!', 'error');
                return;
            }

            if (!studentName || studentName.length < 3) {
                showMessage('‚ùå Ism familiyangizni to\'liq kiriting!', 'error');
                return;
            }

            try {
                const { data: test, error: testError } = await supabase
                    .from('tests')
                    .select('*')
                    .eq('code', testCode)
                    .eq('is_active', true)
                    .single();

                if (testError || !test) {
                    showMessage('‚ùå Bunday test kodi mavjud emas yoki test faol emas!', 'error');
                    return;
                }

                const { data: student, error: studentError } = await supabase
                    .from('students')
                    .insert([{
                        telegram_id: currentUser?.telegram_id || null,
                        full_name: studentName,
                        test_code: testCode,
                        total_questions: test.open_questions_count + test.closed_questions_count
                    }])
                    .select()
                    .single();

                if (studentError) {
                    console.error('Student yaratishda xatolik:', studentError);
                    showMessage('‚ùå Testga yozilishda xatolik yuz berdi!', 'error');
                    return;
                }

                showMessage('‚úÖ Test muvaffaqiyatli boshlandi!', 'success');
                console.log('Student ID:', student.id);
                console.log('Test:', test);

            } catch (error) {
                console.error('Test boshlashda xatolik:', error);
                showMessage('‚ùå Testni boshlashda xatolik yuz berdi!', 'error');
            }
        }

        // Tab almashtirish
        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.add('hidden');
            });

            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });

            document.getElementById(tabName).classList.remove('hidden');
            event.target.classList.add('active');

            // Tab ochilganda ma'lumotlarni yuklash
            switch(tabName) {
                case 'dashboard':
                    loadDashboard();
                    break;
                case 'users':
                    loadUsers();
                    break;
                case 'tests':
                    loadTests();
                    break;
                case 'students':
                    loadStudents();
                    break;
                case 'results':
                    loadResults();
                    break;
            }
        }

        // Dashboard statistikasini yuklash
        async function loadDashboard() {
            if (!isAdmin) return;

            try {
                document.getElementById('statsGrid').innerHTML = '<div class="loading">üìä Statistika yuklanmoqda...</div>';

                const [usersResult, testsResult, studentsResult] = await Promise.all([
                    supabase.from('users').select('id', { count: 'exact' }),
                    supabase.from('tests').select('id', { count: 'exact' }),
                    supabase.from('students').select('id', { count: 'exact' })
                ]);

                const usersCount = usersResult.count || 0;
                const testsCount = testsResult.count || 0;
                const studentsCount = studentsResult.count || 0;

                // Admin count ni alohida hisoblash
                const { data: adminUsers } = await supabase
                    .from('users')
                    .select('id')
                    .eq('is_admin', true);

                const adminsCount = adminUsers ? adminUsers.length : 0;

                const html = `
                    <div class="stat-card fade-in">
                        <div class="stat-number">${usersCount}</div>
                        <div class="stat-label">üë• Foydalanuvchilar</div>
                    </div>
                    <div class="stat-card fade-in">
                        <div class="stat-number">${adminsCount}</div>
                        <div class="stat-label">üë®‚Äçüíº Adminlar</div>
                    </div>
                    <div class="stat-card fade-in">
                        <div class="stat-number">${testsCount}</div>
                        <div class="stat-label">üìù Testlar</div>
                    </div>
                    <div class="stat-card fade-in">
                        <div class="stat-number">${studentsCount}</div>
                        <div class="stat-label">üéì O'quvchilar</div>
                    </div>
                `;

                document.getElementById('statsGrid').innerHTML = html;

            } catch (error) {
                console.error('Dashboard yuklanmadi:', error);
                document.getElementById('statsGrid').innerHTML = '<div class="error">‚ùå Statistika yuklanmadi</div>';
            }
        }

        // Test yaratish
        async function createTest() {
            if (!isAdmin) {
                showMessage('‚ùå Sizda test yaratish huquqi yo\'q!', 'error');
                return;
            }

            const code = document.getElementById('testCode').value.trim().toUpperCase();
            const title = document.getElementById('testTitle').value.trim();
            const openCount = parseInt(document.getElementById('openCount').value);
            const closedCount = parseInt(document.getElementById('closedCount').value);

            // Validatsiya
            if (!code || code.length < 3) {
                showMessage('‚ùå Test kodi kamida 3 ta belgidan iborat bo\'lishi kerak!', 'error');
                return;
            }

            if (!title || title.length < 3) {
                showMessage('‚ùå Test nomi kamida 3 ta belgidan iborat bo\'lishi kerak!', 'error');
                return;
            }

            if (openCount + closedCount === 0) {
                showMessage('‚ùå Kamida bitta savol bo\'lishi kerak!', 'error');
                return;
            }

            if (openCount > 50 || closedCount > 50) {
                showMessage('‚ùå Har bir tur uchun maksimal 50 ta savol!', 'error');
                return;
            }

            try {
                // Kod mavjudligini tekshirish
                const { data: existingTest } = await supabase
                    .from('tests')
                    .select('*')
                    .eq('code', code)
                    .single();

                if (existingTest) {
                    showMessage('‚ùå Bu kod allaqachon mavjud! Boshqa kod tanlang.', 'error');
                    return;
                }

                // Testni yaratish
                const { data: testData, error: testError } = await supabase
                    .from('tests')
                    .insert([{
                        code: code,
                        title: title,
                        admin_id: currentUser.telegram_id,
                        open_questions_count: openCount,
                        closed_questions_count: closedCount,
                        is_active: false
                    }])
                    .select()
                    .single();

                if (testError) throw testError;

                // Muvaffaqiyat xabari
                showMessage('‚úÖ Test muvaffaqiyatli yaratildi!', 'success');

                // Formni tozalash
                document.getElementById('testCode').value = '';
                document.getElementById('testTitle').value = '';
                document.getElementById('openCount').value = '0';
                document.getElementById('closedCount').value = '0';

                // Javoblar kiritish qismini ko'rsatish
                if (openCount > 0 || closedCount > 0) {
                    showAnswersSection(testData.id, openCount, closedCount);
                }

            } catch (error) {
                console.error('Test yaratishda xatolik:', error);
                showMessage('‚ùå Test yaratishda xatolik yuz berdi: ' + error.message, 'error');
            }
        }

        // Javoblar kiritish qismini ko'rsatish
        function showAnswersSection(testId, openCount, closedCount) {
            const answersSection = document.getElementById('answersSection');
            answersSection.classList.remove('hidden');

            let html = '<div id="answersProgress"></div>';

            // Ochiq savollar uchun
            if (openCount > 0) {
                html += '<h4>üìñ Ochiq Savollar Javoblari</h4>';
                for (let i = 1; i <= openCount; i++) {
                    html += `
                        <div class="question-input" id="open-${i}">
                            <label class="form-label">${i}-savol javobi:</label>
                            <input type="text" id="openAnswer${i}" class="form-input"
                                   placeholder="To'g'ri javobni kiriting" />
                            <button onclick="saveAnswer(${testId}, ${i}, 'open')" class="btn" style="margin-top: 10px;">
                                üíæ Saqlash
                            </button>
                        </div>
                    `;
                }
            }

            // Yopiq savollar uchun
            if (closedCount > 0) {
                html += '<h4>üìã Yopiq Savollar Javoblari</h4>';
                for (let i = 1; i <= closedCount; i++) {
                    html += `
                        <div class="question-input" id="closed-${i}">
                            <label class="form-label">${i}-savol javobi:</label>
                            <select id="closedAnswer${i}" class="form-input">
                                <option value="">Javobni tanlang</option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>
                            </select>
                            <button onclick="saveAnswer(${testId}, ${i}, 'closed')" class="btn" style="margin-top: 10px;">
                                üíæ Saqlash
                            </button>
                        </div>
                    `;
                }
            }

            html += `
                <div style="margin-top: 30px; padding: 20px; background: #f8f9fa; border-radius: 10px;">
                    <h4>üìä Yakunlash</h4>
                    <p>Barcha javoblarni kiritgandan keyin testni faollashtiring:</p>
                    <button onclick="finishTestCreation(${testId})" class="btn btn-success">
                        ‚úÖ Testni Yakunlash
                    </button>
                </div>
            `;

            document.getElementById('answersContent').innerHTML = html;
            updateProgress(testId, openCount, closedCount);
        }

        // Javobni saqlash
        async function saveAnswer(testId, questionNumber, questionType) {
            const inputId = questionType === 'open' ? `openAnswer${questionNumber}` : `closedAnswer${questionNumber}`;
            const answer = document.getElementById(inputId).value.trim();

            if (!answer) {
                showMessage('‚ùå Javobni kiriting!', 'error');
                return;
            }

            if (questionType === 'closed' && !['A', 'B', 'C', 'D'].includes(answer)) {
                showMessage('‚ùå Faqat A, B, C yoki D ni tanlang!', 'error');
                return;
            }

            try {
                const { error } = await supabase
                    .from('test_answers')
                    .upsert([{
                        test_id: testId,
                        question_number: questionNumber,
                        question_type: questionType,
                        correct_answer: answer
                    }]);

                if (error) throw error;

                // Muvaffaqiyat belgisi
                const container = document.getElementById(`${questionType}-${questionNumber}`);
                container.classList.add('saved');

                const button = container.querySelector('button');
                button.innerHTML = '‚úÖ Saqlandi';
                button.disabled = true;
                button.style.background = '#10b981';

                showMessage('‚úÖ Javob saqlandi!', 'success');

                // Progressni yangilash
                await updateProgress(testId, 0, 0);

            } catch (error) {
                console.error('Javobni saqlashda xatolik:', error);
                showMessage('‚ùå Javobni saqlashda xatolik: ' + error.message, 'error');
            }
        }

        // Progress yangilash
        async function updateProgress(testId, openCount, closedCount) {
            try {
                const { data: savedAnswers } = await supabase
                    .from('test_answers')
                    .select('*')
                    .eq('test_id', testId);

                const { data: test } = await supabase
                    .from('tests')
                    .select('open_questions_count, closed_questions_count')
                    .eq('id', testId)
                    .single();

                if (!test) return;

                const totalAnswers = test.open_questions_count + test.closed_questions_count;
                const savedCount = savedAnswers ? savedAnswers.length : 0;
                const percentage = totalAnswers > 0 ? (savedCount / totalAnswers) * 100 : 0;

                document.getElementById('answersProgress').innerHTML = `
                    <div style="margin-bottom: 20px;">
                        <h4>üìä Javoblar Kiritish Jarayoni</h4>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: ${percentage}%"></div>
                        </div>
                        <p>${savedCount}/${totalAnswers} javob kiritildi (${Math.round(percentage)}%)</p>
                    </div>
                `;

            } catch (error) {
                console.error('Progress yangilashda xatolik:', error);
            }
        }

        // Test yaratishni yakunlash
        async function finishTestCreation(testId) {
            try {
                const { data: test } = await supabase
                    .from('tests')
                    .select('*')
                    .eq('id', testId)
                    .single();

                const { data: answers } = await supabase
                    .from('test_answers')
                    .select('*')
                    .eq('test_id', testId);

                if (!test) {
                    showMessage('‚ùå Test topilmadi!', 'error');
                    return;
                }

                const expectedAnswers = test.open_questions_count + test.closed_questions_count;
                const actualAnswers = answers ? answers.length : 0;

                if (actualAnswers < expectedAnswers) {
                    showMessage(`‚ùå Barcha javoblarni kiriting! ${actualAnswers}/${expectedAnswers} kiritildi.`, 'error');
                    return;
                }

                // Testni faollashtirish
                await supabase
                    .from('tests')
                    .update({ is_active: true })
                    .eq('id', testId);

                showMessage('üéâ Test muvaffaqiyatli yaratildi va faollashtirildi!', 'success');

                // Javoblar qismini yashirish
                document.getElementById('answersSection').classList.add('hidden');

            } catch (error) {
                console.error('Test yakunlashda xatolik:', error);
                showMessage('‚ùå Xatolik yuz berdi: ' + error.message, 'error');
            }
        }

        // Faol testlarni yuklash
        async function loadActiveTests() {
            try {
                const { data: tests, error } = await supabase
                    .from('tests')
                    .select('*')
                    .eq('is_active', true)
                    .order('created_at', { ascending: false });

                if (error) throw error;

                displayTestManagement(tests, 'Faol Testlar');
            } catch (error) {
                console.error('Faol testlarni yuklashda xatolik:', error);
                showMessage('‚ùå Faol testlarni yuklashda xatolik!', 'error');
            }
        }

        // Nofaol testlarni yuklash
        async function loadInactiveTests() {
            try {
                const { data: tests, error } = await supabase
                    .from('tests')
                    .select('*')
                    .eq('is_active', false)
                    .order('created_at', { ascending: false });

                if (error) throw error;

                displayTestManagement(tests, 'Nofaol Testlar');
            } catch (error) {
                console.error('Nofaol testlarni yuklashda xatolik:', error);
                showMessage('‚ùå Nofaol testlarni yuklashda xatolik!', 'error');
            }
        }

        // Test boshqaruv ko'rinishini ko'rsatish
        function displayTestManagement(tests, title) {
            const container = document.getElementById('testManagement');

            if (!tests || tests.length === 0) {
                container.innerHTML = `<p class="text-center">üì≠ ${title} yo'q</p>`;
                return;
            }

            let html = `<h4>${title}</h4>`;

            tests.forEach(test => {
                html += `
                    <div class="test-item">
                        <div>
                            <div class="test-code">${test.code}</div>
                            <div><strong>${test.title}</strong></div>
                            <div>Ochiq: ${test.open_questions_count}, Yopiq: ${test.closed_questions_count}</div>
                            <div>Yaratilgan: ${new Date(test.created_at).toLocaleDateString('uz-UZ')}</div>
                        </div>
                        <div style="display: flex; flex-wrap: wrap; gap: 5px;">
                            ${test.is_active ?
                                `<button onclick="toggleTestStatus(${test.id}, false)" class="test-action-btn btn-deactivate">üö´ Nofaol</button>` :
                                `<button onclick="toggleTestStatus(${test.id}, true)" class="test-action-btn btn-activate">‚úÖ Faol</button>`
                            }
                            <button onclick="deleteTest(${test.id})" class="test-action-btn btn-delete">üóëÔ∏è O'chirish</button>
                            <button onclick="viewTestDetails(${test.id})" class="test-action-btn btn-view">üëÅÔ∏è Ko'rish</button>
                        </div>
                    </div>
                `;
            });

            container.innerHTML = html;
        }

        // Test statusini o'zgartirish
        async function toggleTestStatus(testId, isActive) {
            try {
                const { error } = await supabase
                    .from('tests')
                    .update({ is_active: isActive })
                    .eq('id', testId);

                if (error) throw error;

                showMessage(`‚úÖ Test ${isActive ? 'faollashtirildi' : 'nofaol qilindi'}!`, 'success');
                loadActiveTests(); // Ro'yxatni yangilash

            } catch (error) {
                console.error('Test statusini o\'zgartirishda xatolik:', error);
                showMessage('‚ùå Xatolik yuz berdi!', 'error');
            }
        }

        // Testni o'chirish
        async function deleteTest(testId) {
            if (!confirm('Testni o\'chirishni tasdiqlaysizmi? Bu amal qaytarib bo\'lmaydi!')) {
                return;
            }

            try {
                const { error } = await supabase
                    .from('tests')
                    .delete()
                    .eq('id', testId);

                if (error) throw error;

                showMessage('‚úÖ Test o\'chirildi!', 'success');
                loadActiveTests(); // Ro'yxatni yangilash

            } catch (error) {
                console.error('Testni o\'chirishda xatolik:', error);
                showMessage('‚ùå Xatolik yuz berdi!', 'error');
            }
        }

        // Test tafsilotlarini ko'rish
        async function viewTestDetails(testId) {
            try {
                const [testResult, answersResult] = await Promise.all([
                    supabase.from('tests').select('*').eq('id', testId).single(),
                    supabase.from('test_answers').select('*').eq('test_id', testId)
                ]);

                const test = testResult.data;
                const answers = answersResult.data || [];

                if (!test) {
                    showMessage('‚ùå Test topilmadi!', 'error');
                    return;
                }

                let detailsHtml = `
                    <div class="card">
                        <h4>üìã Test Tafsilotlari</h4>
                        <p><strong>Kod:</strong> ${test.code}</p>
                        <p><strong>Nom:</strong> ${test.title}</p>
                        <p><strong>Status:</strong> ${test.is_active ? '‚úÖ Faol' : '‚ùå Nofaol'}</p>
                        <p><strong>Savollar:</strong> Ochiq: ${test.open_questions_count}, Yopiq: ${test.closed_questions_count}</p>
                        <p><strong>Javoblar soni:</strong> ${answers.length}</p>
                        <p><strong>Yaratilgan:</strong> ${new Date(test.created_at).toLocaleDateString('uz-UZ')}</p>
                `;

                if (answers.length > 0) {
                    detailsHtml += '<h5>Javoblar:</h5><ul>';
                    answers.forEach(answer => {
                        detailsHtml += `<li>${answer.question_type === 'open' ? 'Ochiq' : 'Yopiq'} ${answer.question_number}: ${answer.correct_answer}</li>`;
                    });
                    detailsHtml += '</ul>';
                }

                detailsHtml += '</div>';

                document.getElementById('testManagement').innerHTML = detailsHtml;

            } catch (error) {
                console.error('Test tafsilotlarini yuklashda xatolik:', error);
                showMessage('‚ùå Test tafsilotlarini yuklashda xatolik!', 'error');
            }
        }

        // Foydalanuvchilarni yuklash
        async function loadUsers() {
            if (!isAdmin) return;

            try {
                document.getElementById('usersList').innerHTML = '<div class="loading">üë• Foydalanuvchilar yuklanmoqda...</div>';

                const { data: users, error } = await supabase
                    .from('users')
                    .select('*')
                    .order('created_at', { ascending: false });

                if (error) throw error;

                if (!users || users.length === 0) {
                    document.getElementById('usersList').innerHTML = '<p class="text-center">üì≠ Foydalanuvchilar yo\'q</p>';
                    return;
                }

                let html = '';
                users.forEach(user => {
                    html += `
                        <div class="list-item">
                            <div class="list-item-content">
                                <div class="list-item-title">${user.full_name || user.first_name}</div>
                                <div class="list-item-subtitle">
                                    ID: ${user.telegram_id} |
                                    ${user.is_admin ? 'Admin' : 'Foydalanuvchi'} |
                                    ${new Date(user.created_at).toLocaleDateString('uz-UZ')}
                                </div>
                            </div>
                            <div class="list-item-actions">
                                <span class="status-badge ${user.is_admin ? 'status-active' : 'status-inactive'}">
                                    ${user.is_admin ? 'üë®‚Äçüíº Admin' : 'üë§ User'}
                                </span>
                            </div>
                        </div>
                    `;
                });

                document.getElementById('usersList').innerHTML = html;

            } catch (error) {
                console.error('Foydalanuvchilarni yuklashda xatolik:', error);
                document.getElementById('usersList').innerHTML = '<div class="error">‚ùå Foydalanuvchilarni yuklashda xatolik</div>';
            }
        }

        // Testlarni yuklash
        async function loadTests() {
            if (!isAdmin) return;

            try {
                document.getElementById('testsList').innerHTML = '<div class="loading">üìù Testlar yuklanmoqda...</div>';

                const { data: tests, error } = await supabase
                    .from('tests')
                    .select('*')
                    .order('created_at', { ascending: false });

                if (error) throw error;

                if (!tests || tests.length === 0) {
                    document.getElementById('testsList').innerHTML = '<p class="text-center">üì≠ Testlar yo\'q</p>';
                    return;
                }

                let html = '';
                tests.forEach(test => {
                    html += `
                        <div class="list-item">
                            <div class="list-item-content">
                                <div class="list-item-title">${test.code} - ${test.title}</div>
                                <div class="list-item-subtitle">
                                    Ochiq: ${test.open_questions_count}, Yopiq: ${test.closed_questions_count} |
                                    ${new Date(test.created_at).toLocaleDateString('uz-UZ')}
                                </div>
                            </div>
                            <div class="list-item-actions">
                                <span class="status-badge ${test.is_active ? 'status-active' : 'status-inactive'}">
                                    ${test.is_active ? '‚úÖ Faol' : '‚ùå Nofaol'}
                                </span>
                            </div>
                        </div>
                    `;
                });

                document.getElementById('testsList').innerHTML = html;

            } catch (error) {
                console.error('Testlarni yuklashda xatolik:', error);
                document.getElementById('testsList').innerHTML = '<div class="error">‚ùå Testlarni yuklashda xatolik</div>';
            }
        }

        // O'quvchilarni yuklash
        async function loadStudents() {
            if (!isAdmin) return;

            try {
                document.getElementById('studentsList').innerHTML = '<div class="loading">üéì O\'quvchilar yuklanmoqda...</div>';

                const { data: students, error } = await supabase
                    .from('students')
                    .select('*')
                    .order('created_at', { ascending: false });

                if (error) throw error;

                if (!students || students.length === 0) {
                    document.getElementById('studentsList').innerHTML = '<p class="text-center">üì≠ O\'quvchilar yo\'q</p>';
                    return;
                }

                let html = '';
                students.forEach(student => {
                    const score = student.score || 0;
                    const totalQuestions = student.total_questions || 1;
                    const percentage = Math.round((score / totalQuestions) * 100);

                    html += `
                        <div class="list-item">
                            <div class="list-item-content">
                                <div class="list-item-title">${student.full_name}</div>
                                <div class="list-item-subtitle">
                                    Test: ${student.test_code} |
                                    Ball: ${score}/${totalQuestions} (${percentage}%) |
                                    ${new Date(student.created_at).toLocaleDateString('uz-UZ')}
                                </div>
                            </div>
                            <div class="list-item-actions">
                                <span class="status-badge ${percentage >= 70 ? 'status-active' : 'status-inactive'}">
                                    ${percentage}%
                                </span>
                            </div>
                        </div>
                    `;
                });

                document.getElementById('studentsList').innerHTML = html;

            } catch (error) {
                console.error('O\'quvchilarni yuklashda xatolik:', error);
                document.getElementById('studentsList').innerHTML = '<div class="error">‚ùå O\'quvchilarni yuklashda xatolik</div>';
            }
        }

        // Natijalarni yuklash
        async function loadResults() {
            if (!isAdmin) return;

            try {
                document.getElementById('resultsList').innerHTML = '<div class="loading">üìà Natijalar yuklanmoqda...</div>';

                const { data: results, error } = await supabase
                    .from('students')
                    .select(`
                        *,
                        tests!inner(code, title)
                    `)
                    .order('created_at', { ascending: false });

                if (error) throw error;

                if (!results || results.length === 0) {
                    document.getElementById('resultsList').innerHTML = '<p class="text-center">üì≠ Natijalar yo\'q</p>';
                    return;
                }

                let html = '';
                results.forEach(result => {
                    const score = result.score || 0;
                    const totalQuestions = result.total_questions || 1;
                    const percentage = Math.round((score / totalQuestions) * 100);

                    html += `
                        <div class="list-item">
                            <div class="list-item-content">
                                <div class="list-item-title">${result.full_name}</div>
                                <div class="list-item-subtitle">
                                    Test: ${result.tests?.code} - ${result.tests?.title} |
                                    Ball: ${score}/${totalQuestions} (${percentage}%) |
                                    ${new Date(result.created_at).toLocaleDateString('uz-UZ')}
                                </div>
                            </div>
                            <div class="list-item-actions">
                                <span class="status-badge ${percentage >= 70 ? 'status-active' : 'status-inactive'}">
                                    ${percentage >= 70 ? '‚úÖ O\'tdi' : '‚ùå O\'tmadi'}
                                </span>
                            </div>
                        </div>
                    `;
                });

                document.getElementById('resultsList').innerHTML = html;

            } catch (error) {
                console.error('Natijalarni yuklashda xatolik:', error);
                document.getElementById('resultsList').innerHTML = '<div class="error">‚ùå Natijalarni yuklashda xatolik</div>';
            }
        }

        // Natijalarni eksport qilish
        function exportResults() {
            showMessage('üìä Natijalar eksport funksiyasi ishlab chiqilmoqda...', 'info');
        }

        // Eski ma'lumotlarni tozalash
        function clearOldData() {
            if (confirm('Eski ma\'lumotlarni o\'chirishni xohlaysizmi?')) {
                showMessage('üóëÔ∏è Eski ma\'lumotlar tozalash funksiyasi ishlab chiqilmoqda...', 'info');
            }
        }

        // Xabar ko'rsatish
        function showMessage(message, type = 'info') {
            const messageDiv = document.createElement('div');
            messageDiv.className = type === 'error' ? 'error' : 'success-message';
            messageDiv.textContent = message;
            messageDiv.style.position = 'fixed';
            messageDiv.style.top = '20px';
            messageDiv.style.right = '20px';
            messageDiv.style.zIndex = '9999';
            messageDiv.style.maxWidth = '300px';

            document.body.appendChild(messageDiv);

            setTimeout(() => {
                messageDiv.remove();
            }, 5000);
        }

        // Barcha ma'lumotlarni yuklash
        function loadAllData() {
            if (isAdmin) {
                loadDashboard();
            }
        }

        // Sahifa yuklanganda
        document.addEventListener('DOMContentLoaded', function() {
            checkUserRole();
        });

        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Tab') {
                document.body.classList.add('keyboard-navigation');
            }
        });

        document.addEventListener('mousedown', function() {
            document.body.classList.remove('keyboard-navigation');
        });
    </script>
</body>
</html>

